.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #0f0f1a 0%, #1a1a2e 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

.status-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255,255,255,0.05);
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.dot-ok { background: #4caf50; box-shadow: 0 0 10rpx #4caf50; }
.dot-error { background: #f44336; box-shadow: 0 0 10rpx #f44336; }

.status-text {
  font-size: 28rpx;
  color: #e0e0e0;
  flex: 1;
}

.status-mode {
  font-size: 24rpx;
  color: #4fc3f7;
  padding: 6rpx 16rpx;
  background: rgba(79, 195, 247, 0.2);
  border-radius: 8rpx;
}

.attitude-panel {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: rgba(255,255,255,0.05);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.compass {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right: 40rpx;
}

.compass-ring {
  width: 100%;
  height: 100%;
  border: 4rpx solid rgba(79, 195, 247, 0.3);
  border-radius: 50%;
  position: relative;
}

.compass-arrow {
  position: absolute;
  top: 10%;
  left: 50%;
  width: 4rpx;
  height: 40%;
  background: linear-gradient(to bottom, #4fc3f7, transparent);
  transform-origin: bottom center;
  margin-left: -2rpx;
}

.compass-value {
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 32rpx;
  color: #4fc3f7;
  font-weight: bold;
}

.attitude-values {
  flex: 1;
}

.att-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(255,255,255,0.1);
}

.att-label {
  color: #8a8a8a;
  font-size: 26rpx;
}

.att-value {
  color: #e0e0e0;
  font-size: 28rpx;
  font-weight: bold;
}

.control-section {
  background: rgba(255,255,255,0.05);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #8a8a8a;
  margin-bottom: 24rpx;
  display: block;
}

.yaw-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.yaw-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: rgba(79, 195, 247, 0.1);
  border-radius: 16rpx;
  min-width: 100rpx;
}

.yaw-btn:active {
  background: rgba(79, 195, 247, 0.3);
}

.yaw-icon {
  font-size: 36rpx;
  color: #4fc3f7;
}

.yaw-text {
  font-size: 22rpx;
  color: #8a8a8a;
  margin-top: 8rpx;
}

.yaw-center {
  padding: 20rpx 30rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 12rpx;
}

.yaw-center text {
  color: #e0e0e0;
  font-size: 24rpx;
}

.mode-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.mode-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background: rgba(255,255,255,0.05);
  border-radius: 16rpx;
  border: 2rpx solid transparent;
}

.mode-btn:active {
  background: rgba(255,255,255,0.1);
}

.mode-active {
  border-color: #4fc3f7;
  background: rgba(79, 195, 247, 0.1);
}

.mode-icon {
  font-size: 48rpx;
  color: #4fc3f7;
  margin-bottom: 12rpx;
}

.mode-name {
  font-size: 26rpx;
  color: #e0e0e0;
}

.estop-section {
  margin-bottom: 30rpx;
}

.estop-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: rgba(244, 67, 54, 0.2);
  border: 2rpx solid #f44336;
  border-radius: 20rpx;
}

.estop-btn:active {
  background: rgba(244, 67, 54, 0.4);
}

.estop-icon {
  font-size: 60rpx;
  color: #f44336;
}

.estop-text {
  font-size: 28rpx;
  color: #f44336;
  margin-top: 12rpx;
}

.estop-hint {
  display: block;
  text-align: center;
  font-size: 22rpx;
  color: #8a8a8a;
  margin-top: 16rpx;
}

.log-section {
  background: rgba(255,255,255,0.05);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.log-list {
  max-height: 300rpx;
}

.log-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(255,255,255,0.05);
}

.log-time {
  font-size: 22rpx;
  color: #8a8a8a;
  width: 120rpx;
}

.log-cmd {
  flex: 1;
  font-size: 24rpx;
  color: #e0e0e0;
}

.log-status {
  font-size: 28rpx;
}

.log-ok .log-status { color: #4caf50; }
.log-fail .log-status { color: #f44336; }
