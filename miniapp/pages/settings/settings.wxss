.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #0f0f1a 0%, #1a1a2e 100%);
  padding: 20rpx;
  box-sizing: border-box;
}
.header { padding: 20rpx 0; margin-bottom: 20rpx; }
.title { font-size: 40rpx; font-weight: bold; color: #fff; }

.card {
  background: rgba(255,255,255,0.05);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(255,255,255,0.1);
}
.card-title {
  font-size: 28rpx;
  color: #4fc3f7;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.field { margin-bottom: 20rpx; }
.label { font-size: 24rpx; color: #8a8a8a; display: block; margin-bottom: 8rpx; }
.input {
  background: rgba(0,0,0,0.3);
  border: 1rpx solid rgba(255,255,255,0.2);
  border-radius: 8rpx;
  padding: 16rpx;
  color: #fff;
  font-size: 26rpx;
}

.field-row { display: flex; gap: 20rpx; margin-top: 20rpx; }
.btn-save, .btn-test {
  flex: 1;
  background: rgba(79, 195, 247, 0.2);
  color: #4fc3f7;
  font-size: 26rpx;
  padding: 16rpx 0;
  border-radius: 8rpx;
}
.btn-test { background: rgba(255,255,255,0.1); color: #8a8a8a; }

.conn-status {
  margin-top: 16rpx;
  padding: 12rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 24rpx;
}
.status-ok { background: rgba(76,175,80,0.2); color: #4caf50; }
.status-err { background: rgba(244,67,54,0.2); color: #f44336; }

.preset-list { display: flex; flex-direction: column; gap: 12rpx; }
.preset {
  display: flex;
  justify-content: space-between;
  padding: 16rpx;
  background: rgba(0,0,0,0.2);
  border-radius: 8rpx;
}
.preset-name { color: #e0e0e0; font-size: 26rpx; }
.preset-addr { color: #8a8a8a; font-size: 24rpx; }

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(255,255,255,0.05);
}
.info-label { color: #8a8a8a; font-size: 26rpx; }
.info-value { color: #e0e0e0; font-size: 26rpx; }
.info-small { font-size: 22rpx; max-width: 400rpx; overflow: hidden; text-overflow: ellipsis; }
.text-ok { color: #4caf50; }
.text-err { color: #f44336; }

.version { color: #8a8a8a; font-size: 24rpx; }
